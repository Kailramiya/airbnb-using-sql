<%- include('../partials/head') %>

  <body>
    <%- include('../partials/nav') %>
      <main class="container mx-auto mt-8 p-8 bg-white rounded-lg shadow-md">

        <h1 class="text-xl font-bold pb-1">
          Register Your Home on airbnb.
        </h1>
        <form action="/host/add-home" method="POST"
          class="max-w-md mx-auto w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500">
          <input class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
            type="text" name="houseName" placeholder="Enter your House Name">
          </input>

          <input class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
            type="text" name="price" placeholder="Price Per Night">
          </input>

          <input class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
            type="text" name="location" placeholder="Location">
          </input>

          <input class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
            type="text" name="rating" placeholder="Rating">
          </input>

          <input class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
            type="text" name="photoUrl" placeholder="Enter Photo URL">
          </input>

          <input class="w-full bg-red-500 text-white py-2 rounded-md hover:bg-red-600 block " type="submit"
            value="submit" />

      </main>
  </body>